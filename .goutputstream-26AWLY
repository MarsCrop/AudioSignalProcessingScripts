from scipy.fftpack import *
import numpy as np
from smst.utils import audio, math

#TODO: debug distortion

fs, data = audio.read_wav("/home/anitalmada/comp.wav")

time = (len(data)/fs)

at = np.exp(-1/(time*fs))

attack_samples = data[:at*fs]

dboftrack = math.to_db_magnitudes(data)

atdb = math.to_db_magnitudes(attack_samples)

dboftrack[dboftrack>np.mean(atdb)]=dboftrack[dboftrack>np.mean(atdb)]+6    
    
audio.write_wav(((10**(dBoftrack*0.5)+data)),fs,"/home/anitalmada/attack.wav")

