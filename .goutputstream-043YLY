from scipy.fftpack import *
import numpy as np
from smst.utils import audio, math
from essentia.standard import *

#TODO: debug distortion

fs, data = audio.read_wav("/home/anitalmada/comp.wav")

time = (len(data)/fs)

at = np.exp(-1/(time*fs))

attack_samples = data[:at*fs]

rms = RMS()

signal_rms = rms(attack_samples)

dB_rms = lambda (signal_rms): 10 * np.log10(np.abs(signal_rms))

dboftrack = math.to_db_magnitudes(data)

def amplify_attack():
     attack_decibels = dboftrack >= db_rms(signal_rms)
     dboftrack[attack_decibels] += 6
     return dboftrack

output = (10**(amplify_attack()/20))+data     
    
audio.write_wav(output,fs,"/home/anitalmada/attack.wav")

